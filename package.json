{
  "name": "@uphold/github-changelog-generator",
  "version": "3.4.0",
  "description": "Generate changelog files from the project's GitHub PRs",
  "license": "MIT",
  "author": "Ricardo Lopes",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "github-changelog-generator": "./bin/github-changelog-generator.js"
  },
  "repository": "uphold/github-changelog-generator",
  "scripts": {
    "lint": "eslint --cache src test",
    "release": "release-it",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest"
  },
  "dependencies": {
    "@octokit/graphql": "^8.2.1",
    "commander": "^8.3.0",
    "ini": "^2.0.0",
    "look-it-up": "^2.1.0",
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "@fastify/pre-commit": "^2.2.0",
    "eslint": "^8.30.0",
    "eslint-config-uphold": "^6.0.0",
    "jest": "^29.3.1",
    "nock": "^14.0.1",
    "prettier": "^2.8.1"
  },
  "engines": {
    "node": ">=20"
  },
  "pre-commit": {
    "run": [
      "lint"
