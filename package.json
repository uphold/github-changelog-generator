{
  "name": "@uphold/github-changelog-generator",
  "version": "0.8.1",
  "description": "Generate changelog files from the project's GitHub PRs",
  "license": "MIT",
  "author": "Ricardo Lopes",
  "main": "dist/index.js",
  "bin": {
    "github-changelog-generator": "./bin/github-changelog-generator.js"
  },
  "repository": "uphold/github-changelog-generator",
  "scripts": {
    "changelog": "./bin/github-changelog-generator.js -f $npm_package_version -t v$npm_package_version > CHANGELOG.md",
    "lint": "eslint --cache src test",
    "release": "npm version -m 'Release %s'",
    "test": "jest",
    "transpile": "rm -rf dist/* && babel src --copy-files --out-dir dist",
    "version": "npm run transpile && npm run changelog && git add -A CHANGELOG.md dist"
  },
  "dependencies": {
    "@octokit/rest": "^15.15.1",
    "bluebird": "^3.5.3",
    "commander": "^2.19.0",
    "ini": "^1.3.5",
    "lodash": "^4.17.15",
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-async-to-module-method": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-node6": "^11.0.0",
    "eslint": "^6.5.1",
    "eslint-config-uphold": "^1.0.0",
    "jest": "^23.6.0",
    "nock": "^10.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2"
  },
  "engines": {
    "node": ">=8"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "restoreMocks": true,
    "setupTestFrameworkScriptFile": "./test/setup.js",
    "testEnvironment": "node"
  },
  "pre-commit": {
    "run": [
      "lint"
    ],
    "silent": true
  }
}
